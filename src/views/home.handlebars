<div>
  <h1>Bienvenido a la Tienda de Instrumentos</h1>
  <h2>Productos Disponibles</h2>

  <div class="product-cards">
    {{#each products}}
      <div class="product-card">
        <h3>{{this.brand}} - {{this.model}}</h3>
        <p>Precio: ${{this.price}}</p>
        <p>Stock: {{this.stock}}</p>
        <p>Categor√≠a: {{this.category}}</p>
        <p>-</p>
        <a>ID: {{this.id}}</a>
      </div>
    {{else}}
      <p>No hay productos disponibles.</p>
    {{/each}}
  </div>

  <a href="/add-product">Agregar nuevo producto</a>
  <a href="/real-time-products"> Ver Productos en Tiempo Real </a>
</div>